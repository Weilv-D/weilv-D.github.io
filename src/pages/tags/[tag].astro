---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.data.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title={`标签: ${tag} | 未来回忆录`} description={`关于 ${tag} 的文章`}>
    <section>
        <div class="mb-12 flex items-baseline gap-4">
            <h1 class="text-4xl font-serif font-bold">#{tag}</h1>
            <span class="text-[var(--color-secondary)]">{posts.length} 篇文章</span>
            <a href={`${import.meta.env.BASE_URL}tags`} class="ml-auto text-sm link-underline">查看所有标签</a>
        </div>
        
        <div class="space-y-12">
            {sortedPosts.map((post, index) => (
                <article class={`flex flex-col md:flex-row gap-4 md:gap-8 items-baseline group animate-fade-in-up`} style={`animation-delay: ${index * 100}ms`}>
                    <div class="md:w-1/4 text-sm text-[var(--color-secondary)] flex flex-col md:items-end">
                        <time datetime={post.data.pubDate.toISOString()}>
                            {post.data.pubDate.toLocaleDateString('en-us', {
                                year: 'numeric',
                                month: 'short',
                                day: 'numeric',
                            })}
                        </time>
                        <span class="hidden md:inline mt-1 text-xs uppercase tracking-wider opacity-70">{post.data.category}</span>
                    </div>
                    <div class="md:w-3/4">
                        <a href={`${import.meta.env.BASE_URL}blog/${post.slug}`} class="block">
                            <h2 class="text-2xl font-bold mb-2 group-hover:text-[var(--color-accent)] transition-colors">
                                {post.data.title}
                            </h2>
                            <p class="text-[var(--color-secondary)] mb-4">
                                {post.data.description}
                            </p>
                            <span class="text-sm font-medium link-underline">阅读更多</span>
                        </a>
                    </div>
                </article>
            ))}
        </div>
    </section>
</BaseLayout>
