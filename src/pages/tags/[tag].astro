---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCover from '../../components/PostCover.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.data.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const sortedPosts = posts.sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf());
---

<BaseLayout title={`标签: ${tag} | 未来回忆录`} description={`关于 ${tag} 的文章`}>
    <section>
        <div class="mb-12 flex items-baseline gap-4">
            <h1 class="text-4xl font-serif font-bold">#{tag}</h1>
            <span class="text-[var(--color-secondary)]">{posts.length} 篇文章</span>
            <a href={`${import.meta.env.BASE_URL}tags`} class="ml-auto text-sm link-underline">查看所有标签</a>
        </div>
        
        <div class="space-y-12">
            {sortedPosts.map((post, index) => (
                <article class={`group relative flex flex-col md:flex-row gap-6 md:gap-8 items-start p-4 -mx-4 rounded-3xl hover:bg-[var(--color-surface)] transition-colors duration-300 animate-fade-in-up`} style={`animation-delay: ${index * 100}ms`}>
					<a href={`${import.meta.env.BASE_URL}blog/${post.slug}`} class="block md:w-1/3 shrink-0">
                        <PostCover 
                            title={post.data.title} 
                            image={post.data.heroImage} 
                            category={post.data.category}
                            className="aspect-[4/3] rounded-2xl shadow-sm border border-[var(--color-border)]"
                        />
                    </a>
                    <div class="flex-1 flex flex-col justify-center py-2">
                        <div class="flex items-center gap-3 text-xs font-medium text-[var(--color-secondary)] mb-3 uppercase tracking-wider">
                            <time datetime={post.data.pubDate.toISOString()}>
                                {post.data.pubDate.toLocaleDateString('en-us', {
                                    year: 'numeric',
                                    month: 'short',
                                    day: 'numeric',
                                })}
                            </time>
                            <span class="w-1 h-1 rounded-full bg-[var(--color-accent)]"></span>
                            <span>{post.data.category}</span>
                        </div>
                        <a href={`${import.meta.env.BASE_URL}blog/${post.slug}`} class="block">
                            <h2 class="text-2xl font-bold mb-2 group-hover:text-[var(--color-accent)] transition-colors">
                                {post.data.title}
                            </h2>
                            <p class="text-[var(--color-secondary)] mb-4">
                                {post.data.description}
                            </p>
                            <span class="text-sm font-medium link-underline">阅读更多</span>
                        </a>
                    </div>
                </article>
            ))}
        </div>
    </section>
</BaseLayout>
