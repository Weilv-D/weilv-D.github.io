---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths({ paginate }) {
  const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );
  return paginate(posts, { pageSize: 5 });
}

const { page } = Astro.props;
---

<BaseLayout title="文章 | 未来回忆录" description="weilv的所有文章">
	<section>
		<h1 class="text-4xl font-serif font-bold mb-12">所有文章</h1>
		<div class="space-y-12">
			{page.data.map((post, index) => (
				<article class={`flex flex-col md:flex-row gap-4 md:gap-8 items-baseline group animate-fade-in-up`} style={`animation-delay: ${index * 100}ms`}>
                    <div class="md:w-1/4 text-sm text-[var(--color-secondary)] flex flex-col md:items-end">
                        <time datetime={post.data.pubDate.toISOString()}>
                            {post.data.pubDate.toLocaleDateString('en-us', {
                                year: 'numeric',
                                month: 'short',
                                day: 'numeric',
                            })}
                        </time>
                        <span class="hidden md:inline mt-1 text-xs uppercase tracking-wider opacity-70">{post.data.category}</span>
                    </div>
					<div class="md:w-3/4">
                        <a href={`${import.meta.env.BASE_URL}blog/${post.slug}`} class="block">
                            {post.data.heroImage && (
                                <div class="mb-4 rounded-2xl overflow-hidden shadow-md">
                                    <img 
                                        src={post.data.heroImage.startsWith('/') ? import.meta.env.BASE_URL + post.data.heroImage.slice(1) : post.data.heroImage} 
                                        alt="" 
                                        class="w-full h-auto transition-transform duration-500 group-hover:scale-105" 
                                    />
                                </div>
                            )}
                            <h2 class="text-2xl font-bold mb-2 group-hover:text-[var(--color-accent)] transition-colors">
                                {post.data.title}
                            </h2>
                            <p class="text-[var(--color-secondary)] mb-4">
                                {post.data.description}
                            </p>
                            <span class="text-sm font-medium link-underline">阅读更多</span>
                        </a>
                    </div>
				</article>
			))}
		</div>

        {/* Pagination Controls */}
        <div class="flex justify-between mt-12 pt-8 border-t border-[var(--color-border)]">
            {page.url.prev ? (
                <a href={`${import.meta.env.BASE_URL}${page.url.prev.slice(1)}`} class="text-sm font-medium link-underline">
                    &larr; 上一页
                </a>
            ) : <div></div>}
            
            <span class="text-sm text-[var(--color-secondary)]">
                第 {page.currentPage} 页 / 共 {page.lastPage} 页
            </span>

            {page.url.next ? (
                <a href={`${import.meta.env.BASE_URL}${page.url.next.slice(1)}`} class="text-sm font-medium link-underline">
                    下一页 &rarr;
                </a>
            ) : <div></div>}
        </div>
	</section>
</BaseLayout>
